<?xml version="1.0"?>
<odoo>
    <data>
    
        <record id="res_company_ad_inherit" model="ir.ui.view">
            <field name="name">res.company.form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                    <page name="noti" string="Almacen Digital">
                        <group colspan="4" string="Credenciales servidor">
                    
                            <newline/>
                            
                            <field name="host_produccion" colspan="2"/>
                            <field name="user_produccion" colspan="2"/>
                            <field name="database_produccion" colspan="2"/>
                        </group>
                       
                    
                    </page>
                </xpath>
            </field>
        </record>
    </data> 
</odoo>