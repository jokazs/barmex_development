<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_customer_type_tree" model="ir.ui.view">
        <field name="name">Customer Type</field>
        <field name="model">barmex.partner.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="type_cust_id" />
            </tree>
        </field>
    </record>

    <record id="view_customer_type_form" model="ir.ui.view">
        <field name="name">Customer Type Form</field>
        <field name="model">barmex.partner.type</field>
        <field name="arch" type="xml">
            <form string="Customer Type">
                <sheet>
                    <group name="top">
                        <field name="type_cust_id" />
                        <field name="short_description" />
                        <field name="long_description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>