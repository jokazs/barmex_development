<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="barmex_dialog_box">
        <field name="name">Dialog box</field>
        <field name="model">barmex.dialog.box</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <field name="text" />
                <p><field name="dialog_lines" /></p>
                <group>
                    <footer>
                        <button name="action_confirm" string="Yes" type="object" class="oe_highlight" />
                        <button name="action_cancel" string="No" type="object" class="btn btn-default" />
                    </footer>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="barmex_product_classification_dialog">
        <field name="name">Product classification</field>
        <field name="model">product.product</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <p>:D</p>
                <group>
                    <footer>
                        <button name="classification" string="Yes" type="object" class="oe_highlight" />
                        <button name="action_cancel" string="No" type="object" class="btn btn-default" />
                    </footer>
                </group>
            </form>
        </field>
    </record>

</odoo>